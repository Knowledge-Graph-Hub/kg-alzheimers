pipeline {
    agent {
        docker {
            label 'worker'
            image 'python:3.8-buster'
        }
    }
    stages {
        stage('setup') {
            steps {
                sh '''
                    python -mvenv venv
                    . ./venv/bin/activate
                    pip install kghub-downloader
                '''
            }
        }
        stage('download and mirror') {
            steps {
                sh '''
                    . ./venv/bin/activate
                    downloader download.yaml --mirror gs://monarch-ingest/download-cache
                '''
            }
        }
    }
}
