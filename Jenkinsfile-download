pipeline {
    agent {
        docker {
            label 'worker'
            docker 'python:3.8-buster'
        }
    }
    stages {
        stage('setup') {
            steps {
                sh 'pip install kghub-downloader'
            }
        }
        stage('download and mirror') {
            steps {
                sh 'downloader download.yaml --mirror gs://monarch-ingest/download-cache'
            }
        }
    }
}
