pipeline {
    agent { label 'monarch-agent-small' }
    triggers {
        cron('H H * * 7')  //sometime on Sundays
    }
    environment {
        HOME = "${env.WORKSPACE}"
        PATH = "/home/ubuntu/.poetry/bin:${env.PATH}"
    }
    stages {
        stage('setup') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install kghub-downloader
                '''
            }
        }
        stage('download') {
            steps {
                sh '''
                downloader monarch_ingest/download.yaml
                '''
            }
        }
        stage('post-process') {
            steps {
                sh '''
                    zcat data/alliance/BGI_*.gz | jq '.data[].basicGeneticEntity.primaryId' | gzip > data/alliance/alliance_gene_ids.txt.gz
                '''
            }
        }
        stage('upload') {
            steps {
                sh '''
                    gsutil -m cp -r data/* gs://monarch-ingest-data-cache
                    gsutil -m mv gs://monarch-ingest-data-cache/omim gs://
                '''
            }
        }
    }
}
