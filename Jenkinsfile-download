pipeline {
    agent { label 'monarch-agent-small' }
    triggers {
        cron('H H * * 7')  //sometime on Sundays
    }
    environment {
        HOME = "${env.WORKSPACE}"
        PATH = "/home/ubuntu/.poetry/bin:${env.PATH}"
    }
    stages {
        stage('setup') {
            steps {
                sh '''
                    echo "Current directory: $(pwd)"
                    python3 --version
                    pip --version
                    echo "Path: $PATH"
                    
                    which poetry
                    poetry install
                    poetry run which ingest
                '''
            }
        }
        stage('download') {
            steps {
                sh '''
                    poetry run ingest download --all
                '''
            }
        }
        stage('post-process') {
            steps {
                sh '''
                    zcat data/alliance/BGI_*.gz | jq '.data[].basicGeneticEntity.primaryId' | gzip > data/alliance/alliance_gene_ids.txt.gz
                '''
            }
        }
        stage('upload') {
            steps {
                sh '''
                    gsutil -m cp -r data/* gs://monarch-ingest-data-cache
                '''
            }
        }
    }
}
